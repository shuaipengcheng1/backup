<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.misaka.data_model.Dao.GoodsDao">
    <select id="findGoods" resultType="com.misaka.data_model.Domain.Goods">
        select *
        from goods
        where goods = #{info}
  </select>
    <update id="Decrese">
        UPDATE goods set goods_num=goods_num-#{num} WHERE id =#{id}
    </update>
</mapper>