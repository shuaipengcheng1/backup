<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.user_model.Dao.UserDao">
    <select id="FindUser" resultType="com.example.user_model.Domain.User">
        select *
        from user
        where id = #{arg0}
  </select>
    <update id="Decrease">
        update user set value=value-#{price} where username='misaka'
    </update>
</mapper>